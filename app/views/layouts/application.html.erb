<!DOCTYPE html>
<html>
<head class="header-color">
  <title>ELS</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <link rel="shortcut icon" sizes="76x76" type="image/x-icon" href="../../assets/kahoot.ico">
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'cocoon', 'data-turbolinks-track': 'reload' %>
</head>
<% if current_student && current_student.admin == true%>
<div class="container-scroller">
  <%= render 'layouts/navbar'%>
  <div class="container-fluid page-body-wrapper">
    <%= render 'layouts/sidebar'%>
    <div class="bodya">
      <div class="inner-nava">
        <%= yield %>
      </div>
    </div>
  </div>
</div>
<%else%>
<body class="full-body">
  <%= render 'layouts/header' %>
  <div class="body">
    <% flash.each do |message_type, message| %>
    <div class="alert alert-<%= message_type %>"><%= message %></div>
    <% end %>
    <%= yield %>
  </div>
  <%= render 'layouts/footer' %>
</body>
<%end%>
</html>
