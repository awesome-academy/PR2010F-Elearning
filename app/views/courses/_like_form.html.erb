<% if current_student %>
<% liked = @course.likes.find_by(student_id: current_student.id)%>
<% if liked.present?%>
<%= link_to '<i class="fas fa-heart fa-lg red"></i>'.html_safe, course_like_path(@course, liked), method: :delete, remote: true %>
<% else %>
<%= form_for [@course, @like],remote: true do |f| %>
<div class="field">
  <%= f.hidden_field :course_id, value: @course.id %>
  <%= f.hidden_field :student_id, value: current_student.id %>
</div>
  <%= f.button class: 'btnheart' do %>
  <i class="far fa-heart fa-lg blk"></i>
  <% end %>
<% end %>
<% end %>
<% end %>
