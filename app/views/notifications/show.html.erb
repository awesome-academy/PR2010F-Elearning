<div class="container">
  <h2>Summary results</h2>
  <h6>Number of tests: <%= @tests.count%></h6>
  <table class="table">
    <thead>
      <tr class="table-primary">
        <th>Exam</th>
        <th>Start time</th>
        <th>Result</th>
        <th>Detail</th>
      </tr>
    </thead>
    <tbody>
      <% @tests.each_with_index do |test,i|%>
      <tr class="<%= Result::RESULT_COLOR[i] %>">
        <td><span><%= test.course.title %></span></td>
        <td><%= time_ago_in_words(test.created_at) %></td>
        <td><%=test.mark%>/<%=test.course.questions.count%></td>
        <td><%= link_to '<i class="fas fa-info-circle"></i>'.html_safe, test_path(test), class:'btn btn-success'%></td>
      </tr>
      <% end %>
      <%= will_paginate @tests, list_classes: %w(pagination justify-content-end) , class:'paginate'%>
    </tbody>
  </table>
</div>
