<p id="notice"><%= notice %></p>
<h1>Categories</h1>
<%= link_to 'New Category', new_admin_category_path %>
<div class="container">
  <div class="row">
    <% @categories.each do |category| %>
    <div class="col-md-3">
      <div class="card mt-5">
        <div class="card-header">
          <%= category.category%>
        </div>
        <%= link_to admin_category_path(category) do %>
        <div class="card-body">
          <div class="body-c4rd">
            <%= image_tag category.img_category, width: "100%", height: "150px;" if category.img_category.attached?%>
          </div>
        </div>
        <%end%>
        <div class="card-footer">
          <%= link_to 'Edit', edit_admin_category_path(category) %>
          <%= link_to 'Destroy', admin_category_path(category), method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
<br>
