<p id="notice"><%= notice %></p>
<h1>Courses</h1>
<%= link_to 'New Course', new_admin_course_path %>
<div class="container">
  <div class="row">
    <% @courses.each do |course| %>
    <div class="col-md-3">
      <div class="card mt-5">
        <div class="card-header">
          <%= course.title%>
        </div>
        <%= link_to admin_course_path(course) do %>
        <div class="card-body">
          <%= image_tag course.img_course, width: "100%", height: "150px" if course.img_course.attached?%>
        </div>
        <%end%>
        <div class="card-footer">
          <%= link_to 'Edit', edit_admin_course_path(course) %>
          <%= link_to 'Destroy', admin_course_path(course), method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      </div>
    </div>
      <% end %>
    </div>
  </div>
