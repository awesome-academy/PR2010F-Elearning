<% provide(:title, "Log in") %>
<div class="frame">
  <div class="frame-form">
    <div class="h-form">
      <span class="t3hf0m">Log in</span>
    </div>
    <div class="bd-form">
      <div class="form-login">
        <div class="form">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="fi">
            <%= f.label :"Username or email" , class: 'form-label' %>
            <%= f.email_field :email,class: 'form-control', autocomplete: "email" %>
          </div>
          <div class="fi">
            <%= f.label :Password , class: 'form-label'%>
            <%= f.password_field :password,class:'form-control' ,autocomplete: "current-password" %>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="fi">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
          <div class="actions">
            <%= f.submit "Log in", class: "_button" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
